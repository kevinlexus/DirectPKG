create table SCOTT.C_CHANGE_DOCS
(
  id       NUMBER not null,
  mgchange CHAR(6) not null,
  dtek     DATE not null,
  ts       DATE not null,
  user_id  NUMBER not null,
  text     VARCHAR2(2000),
  cd_tp    VARCHAR2(32),
  mg2      VARCHAR2(6)
)
tablespace USERS
  pctfree 1
  initrans 1
  maxtrans 255
  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  );
comment on table SCOTT.C_CHANGE_DOCS
  is 'Документы по разовым изменениям  по лицевым / услугам';
comment on column SCOTT.C_CHANGE_DOCS.id
  is 'ID изменений
';
comment on column SCOTT.C_CHANGE_DOCS.mgchange
  is 'Период за который разовые изменения';
comment on column SCOTT.C_CHANGE_DOCS.dtek
  is 'Дата текущая';
comment on column SCOTT.C_CHANGE_DOCS.ts
  is 'timestamp';
comment on column SCOTT.C_CHANGE_DOCS.user_id
  is 'ID пользователя';
comment on column SCOTT.C_CHANGE_DOCS.text
  is 'Примечание';
comment on column SCOTT.C_CHANGE_DOCS.cd_tp
  is 'Тип корректировки (PAY_SAL-корректировка сальдо, оплатой)';
comment on column SCOTT.C_CHANGE_DOCS.mg2
  is 'Период, которым надо провести разовые изменения';
alter table SCOTT.C_CHANGE_DOCS
  add constraint C_CHANGE_DOCS_P primary key (ID)
  using index 
  tablespace USERS
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  );

