create table SCOTT.T_RLXAC
(
  id        NUMBER default 0 not null,
  cd        VARCHAR2(32) default '32' not null,
  fk_role   NUMBER default 0 not null,
  fk_obj    NUMBER,
  fk_act    NUMBER default 0 not null,
  v         NUMBER default 1 not null,
  grantable NUMBER default 0 not null,
  fk_objt   NUMBER,
  fk_doctp  NUMBER
)
tablespace USERS
  pctfree 10
  initrans 1
  maxtrans 255
  storage
  (
    initial 64K
  );
comment on table SCOTT.T_RLXAC
  is 'ПРИВИЛЕГИЯ РОЛИ НА ОБЪЕКТ / ТИП ДОКУМЕНТА';
comment on column SCOTT.T_RLXAC.id
  is 'ПРИВИЛЕГИЯ РОЛИ НА ОБЪЕКТ / ТИП ДОКУМЕНТА';
comment on column SCOTT.T_RLXAC.cd
