comment on column SCOTT.T_RLXAC.fk_role
  is 'указатель на РОЛЬ';
comment on column SCOTT.T_RLXAC.fk_obj
  is 'указатель на ОБЪЕКТ';
comment on column SCOTT.T_RLXAC.fk_act
  is 'указатель на ДЕЙСТВИЕ (метод объекта)';
comment on column SCOTT.T_RLXAC.v
  is 'вкл/выкл.  включено, если = 1';
comment on column SCOTT.T_RLXAC.grantable
  is 'GRANTABLE  (with admin option)   если = 1';
comment on column SCOTT.T_RLXAC.fk_objt
  is 'суказатель на ТИП ОБЪЕКТА';
comment on column SCOTT.T_RLXAC.fk_doctp
  is 'указатель на ТИП ДОКУМЕНТА ';
alter table SCOTT.T_RLXAC
  add constraint T_RLXAC_PK primary key (ID)
