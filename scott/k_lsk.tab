create table SCOTT.K_LSK
(
  id        NUMBER not null,
  v         NUMBER default 1 not null,
  fk_addrtp NUMBER,
  guid      VARCHAR2(32),
  fk_ext    VARCHAR2(32)
)
tablespace USERS
  pctfree 1
  initrans 1
  maxtrans 255
  storage
  (
    initial 2M
    next 1M
    minextents 1
    maxextents unlimited
  );
comment on table SCOTT.K_LSK
  is 'ID адресных идентификаторов';
comment on column SCOTT.K_LSK.id
  is 'ID адреса';
comment on column SCOTT.K_LSK.v
  is 'отметка для групповых операций';
comment on column SCOTT.K_LSK.fk_addrtp
  is 'указатель на тип адреса';
comment on column SCOTT.K_LSK.guid
  is 'GUID объекта во внешней системе';
comment on column SCOTT.K_LSK.fk_ext
  is 'ID объекта во внешней системе (алфавитно-цифровой)';
alter table SCOTT.K_LSK
  add constraint K_LSK_PK primary key (ID)
  using index 
  tablespace USERS
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 2M
    next 1M
    minextents 1
    maxextents unlimited
  );
alter table SCOTT.K_LSK
  add constraint K_LSK_FK_ADDRTP foreign key (FK_ADDRTP)
  references SCOTT.U_LIST (ID);

