create table SCOTT.SPR_SERVICES
(
  fname_sch   VARCHAR2(25),
  mg          CHAR(6) not null,
  mg1         CHAR(6) not null,
  fk_sch_type NUMBER,
  tp          NUMBER,
  npp         NUMBER
)
tablespace USERS
  pctfree 10
  initrans 1
  maxtrans 255
  storage
  (
    initial 128K
    next 1M
    minextents 1
    maxextents unlimited
  )
nologging;
comment on table SCOTT.SPR_SERVICES
  is 'Имена файлов счетов и прочая информация';
comment on column SCOTT.SPR_SERVICES.fname_sch
  is 'Имя файла для счета';
comment on column SCOTT.SPR_SERVICES.mg
  is 'Нач. период';
comment on column SCOTT.SPR_SERVICES.mg1
  is 'Кон. период';
comment on column SCOTT.SPR_SERVICES.fk_sch_type
  is 'формат счета (0-обычный счет, 4- счет для УСЗН)';
comment on column SCOTT.SPR_SERVICES.tp
  is 'Вариант счета (0-обычный счет, 1-с использованием детализации detail2)';
comment on column SCOTT.SPR_SERVICES.npp
  is '№ п.п (после MG-MG1)';

