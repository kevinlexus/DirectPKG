create table SCOTT.C_STATUS_PR
(
  id    NUMBER not null,
  name  VARCHAR2(25),
  fk_tp NUMBER,
  name2 VARCHAR2(10)
)
tablespace USERS
  pctfree 1
  initrans 1
  maxtrans 255
  storage
  (
    initial 576K
    next 1M
    minextents 1
    maxextents unlimited
  )
nologging;
comment on table SCOTT.C_STATUS_PR
  is 'Справочник статусов проживающих';
comment on column SCOTT.C_STATUS_PR.name
  is 'Наименование для справки пасп.стола';
comment on column SCOTT.C_STATUS_PR.name2
  is 'Короткое наименование';
alter table SCOTT.C_STATUS_PR
  add constraint STATUS_PR_P_ID primary key (ID)
  using index 
  tablespace USERS
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  );
alter table SCOTT.C_STATUS_PR
  add constraint C_STATUS_FK_TP foreign key (FK_TP)
  references SCOTT.U_LIST (ID);

