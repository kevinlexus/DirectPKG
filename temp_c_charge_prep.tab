create global temporary table SCOTT.TEMP_C_CHARGE_PREP
(
  usl        VARCHAR2(3),
  vol        NUMBER,
  kpr        NUMBER,
  kprz       NUMBER,
  kpro       NUMBER,
  sch        NUMBER,
  tp         NUMBER,
  vol_nrm    NUMBER,
  vol_sv_nrm NUMBER,
  kpr2       NUMBER,
  opl        NUMBER,
  dt1        DATE,
  dt2        DATE,
  fk_spk     NUMBER
)
on commit delete rows;
comment on table SCOTT.TEMP_C_CHARGE_PREP
  is 'Подготовительная информация для расчета начисления';
comment on column SCOTT.TEMP_C_CHARGE_PREP.usl
  is 'Услуга';
comment on column SCOTT.TEMP_C_CHARGE_PREP.vol
  is 'Объем';
comment on column SCOTT.TEMP_C_CHARGE_PREP.kpr
  is 'Кол-во проживающих';
comment on column SCOTT.TEMP_C_CHARGE_PREP.kprz
  is 'Кол-во временно зарег';
comment on column SCOTT.TEMP_C_CHARGE_PREP.kpro
  is 'Кол-во временно отсут';
comment on column SCOTT.TEMP_C_CHARGE_PREP.sch
  is 'наличие счетчика (1-есть, null(0) - нет)';
comment on column SCOTT.TEMP_C_CHARGE_PREP.tp
  is 'Тип записи (0-предварительный подсчет,
1 - сгруппированный до ключевых структур, .
2 - кол-во прож.для опред.соцнормы,
3 - итог объёма, проживающих,
4 - корректировки ОДН,
5 - детально, но без корректировок ОДН,
6 - итог объёма, проживающих без коррект. ОДН)
7 - просто, наличие счетчика
8 - наличие льготы (используется совместно с dt1, dt2)';
comment on column SCOTT.TEMP_C_CHARGE_PREP.vol_nrm
  is 'Объем по соцнорме';
comment on column SCOTT.TEMP_C_CHARGE_PREP.vol_sv_nrm
  is 'Объем свыше соцнормы';
comment on column SCOTT.TEMP_C_CHARGE_PREP.kpr2
  is 'Кол-во проживающих в т.ч. все, В.О. В.З. В.П.';
comment on column SCOTT.TEMP_C_CHARGE_PREP.opl
  is 'Площадь, которую надо всё равно учитывать (например когда отопление гКал, где в VOL сидят - гКал)';
comment on column SCOTT.TEMP_C_CHARGE_PREP.dt1
  is 'Дата начала периода';
comment on column SCOTT.TEMP_C_CHARGE_PREP.dt2
  is 'Дата конца периода';
comment on column SCOTT.TEMP_C_CHARGE_PREP.fk_spk
  is 'FK на справочник льгот';
create index SCOTT.TEMP_C_CHARGE_PREP_I on SCOTT.TEMP_C_CHARGE_PREP (TP);

