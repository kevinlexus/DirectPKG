create table SCOTT.STATISTICS
(
  reu        CHAR(3) not null,
  kul        CHAR(4) not null,
  nd         CHAR(6) not null,
  cnt        NUMBER,
  klsk       NUMBER,
  kpr        NUMBER,
  kpr_ot     NUMBER,
  kpr_wr     NUMBER,
  mg         VARCHAR2(6),
  usl        CHAR(3),
  org        NUMBER(3),
  status     NUMBER(1),
  psch       NUMBER(1),
  sch        NUMBER,
  cnt_lg     NUMBER,
  cnt_subs   NUMBER,
  dat        DATE,
  val_group  VARCHAR2(20),
  uch        NUMBER,
  val_group2 VARCHAR2(20),
  cnt_room   NUMBER,
  cena       NUMBER,
  is_empt    NUMBER,
  fk_tp      NUMBER,
  opl        NUMBER,
  is_vol     VARCHAR2(20),
  chng_vol   NUMBER,
  fr         NUMBER
)
tablespace USERS
  pctfree 1
  initrans 1
  maxtrans 255
  storage
  (
    initial 11M
    next 1M
    minextents 1
    maxextents unlimited
  );
comment on table SCOTT.STATISTICS
  is 'Статистика по услугам с детализацией по домам';
comment on column SCOTT.STATISTICS.reu
  is '№ РЭУ';
comment on column SCOTT.STATISTICS.kul
  is 'ID улицы';
comment on column SCOTT.STATISTICS.nd
  is '№ дома';
comment on column SCOTT.STATISTICS.cnt
  is 'Предоставленный объем услуги (квт., куб., точ., чел., м2)';
comment on column SCOTT.STATISTICS.klsk
  is 'Кол-во лицевых счетов';
comment on column SCOTT.STATISTICS.kpr
  is 'Кол-во прописанных';
comment on column SCOTT.STATISTICS.kpr_ot
  is 'Кол-во временно отсутствующих';
comment on column SCOTT.STATISTICS.kpr_wr
  is 'Кол-во временно зарегистрированных';
comment on column SCOTT.STATISTICS.mg
  is 'Дата формирования статистики (ггггмм)';
comment on column SCOTT.STATISTICS.usl
  is 'ID услуги';
comment on column SCOTT.STATISTICS.org
  is 'Код организации - поставщика услуги';
comment on column SCOTT.STATISTICS.status
  is 'Статус жилья';
comment on column SCOTT.STATISTICS.psch
  is 'Признак закрытых лицевых счетов (1-закрытые, 0-действующие)';
comment on column SCOTT.STATISTICS.sch
  is 'Признак наличия индивидуального счетчика (водоснабжение, электроснабжение) 0 -без сч. 1-счетчик.';
comment on column SCOTT.STATISTICS.cnt_lg
  is 'Кол-во льготников, пользующихся услугой';
comment on column SCOTT.STATISTICS.cnt_subs
  is 'Кол-во лицевых, пользующихся услугой, имеющих субсидию';
comment on column SCOTT.STATISTICS.dat
  is 'Дата формирования статистики (ддммгггг)';
comment on column SCOTT.STATISTICS.cnt_room
  is 'Кол-во квартир (только для Итогов)';
comment on column SCOTT.STATISTICS.cena
  is 'Цена';
comment on column SCOTT.STATISTICS.is_empt
  is 'Пустая ли квартира (0-нет, 1 - да)';
comment on column SCOTT.STATISTICS.fk_tp
  is 'FK на тип счета (Основоной, Дополнительный)';
comment on column SCOTT.STATISTICS.opl
  is 'Площадь по услуге (в дополнение к CNT)';
comment on column SCOTT.STATISTICS.is_vol
  is 'Имеется объем по услуге (null,0-нет, 1 -да)';
comment on column SCOTT.STATISTICS.chng_vol
  is 'Объем, полученный из перерасчета';
comment on column SCOTT.STATISTICS.fr
  is 'Первая запись по дому по услуге (1-да, 0 -нет) - нужна в отчетах, для соединения с таблицей a_vvod';
create index SCOTT.S_DAT_REU_KUL_ND_USL_ORG on SCOTT.STATISTICS (DAT, REU, KUL, ND, USL, ORG)
  tablespace USERS
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 10M
    next 1M
    minextents 1
    maxextents unlimited
  );
create index SCOTT.S_MG_REU_KUL_ND_USL_ORG on SCOTT.STATISTICS (MG, REU, KUL, ND, USL, ORG)
  tablespace USERS
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 10M
    next 1M
    minextents 1
    maxextents unlimited
  );

