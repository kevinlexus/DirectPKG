comment on column SCOTT.KART_DETAIL.id
  is 'id';
comment on column SCOTT.KART_DETAIL.lsk
  is 'Лиц.счет';
comment on column SCOTT.KART_DETAIL.ord1
  is 'Порядок лиц.счетов, по адресу';
