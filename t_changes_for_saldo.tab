create table SCOTT.T_CHANGES_FOR_SALDO
(
  lsk   CHAR(8) not null,
  summa NUMBER,
  uslm  CHAR(3),
  org   NUMBER not null,
  type  NUMBER,
  usl   CHAR(3)
)
tablespace USERS
  pctfree 10
  initrans 1
  maxtrans 255
  storage
  (
    initial 320K
    next 1M
    minextents 1
    maxextents unlimited
  );
comment on table SCOTT.T_CHANGES_FOR_SALDO
