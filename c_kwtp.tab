  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  );
create index SCOTT.C_KWTP_LSK_DAT_INK on SCOTT.C_KWTP (LSK, DAT_INK, DOPL)
  tablespace USERS
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 512K
    next 1M
    minextents 1
    maxextents unlimited
  );
create index SCOTT.C_KWTP_LSK_DTEK on SCOTT.C_KWTP (LSK, DTEK)
  tablespace USERS
