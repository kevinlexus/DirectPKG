create table SCOTT.XITO_LG1
(
  reu      CHAR(3) not null,
  trest    CHAR(2) not null,
  kul      CHAR(4) not null,
  nd       CHAR(6) not null,
  lg_id    NUMBER not null,
  summa    NUMBER(10,2),
  cnt_main NUMBER,
  cnt      NUMBER,
  mg       CHAR(6) not null
)
tablespace USERS
  pctfree 10
  initrans 1
  maxtrans 255
  storage
  (
    initial 2M
  )
nologging;
comment on table SCOTT.XITO_LG1
  is 'Сумма возмещения, кол-во льготников';
comment on column SCOTT.XITO_LG1.summa
  is 'Сумма к возмещению';
comment on column SCOTT.XITO_LG1.cnt_main
  is 'Кол-во носителей льготы';
comment on column SCOTT.XITO_LG1.cnt
  is 'Кол-во предоставленных льгот';
create index SCOTT.NXITO_LG1_I_MG on SCOTT.XITO_LG1 (MG)
  tablespace USERS
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 512K
  )
  nologging;
create unique index SCOTT.NXITO_LG1_I_MG_REU on SCOTT.XITO_LG1 (MG, REU, TREST, KUL, ND, LG_ID)
  tablespace USERS
